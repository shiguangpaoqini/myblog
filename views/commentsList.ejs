<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>blog-admin</title>
    <link rel='stylesheet' href='/stylesheets/semantic.min.css' />
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="/javascripts/jquery-3.2.1.min.js"></script>
    <script src="/javascripts/semantic.min.js"></script>
    <script src="/javascripts/wangEditor.min.js"></script>
    <script src="/javascripts/jurlp.min.js"></script>
  </head>
  <body>
  <div class="nav">
    <div class="ui grid">
      <div class="four wide column"></div>
      <div class="eight wide column">
        <h1>blog后台管理</h1>
        <p>评论列表</p>
      </div>
    </div>
  </div>
  <div class="nav-setting">
    <div class="ui buttons">
      <div class="ui floating dropdown button">
        <i class="icon bars"></i>
        <div class="menu">
          <a href="/admin/userList" class="item">用户管理</a>
          <a href="/admin/postsList" class="item">文章管理</a>
          <a href="/admin/commentsList" class="item">评论管理</a>
        </div>
      </div>
    </div>
  </div>
  <%- include('components/notification') %>

  <div class="ui grid">
    <div class="four wide column"></div>  

      <table class="ui celled table">
        <thead>
          <tr>
            <th>评论id</th>
            <th>评论人</th>
            <th>评论文章id</th>
            <th>评论内容</th>
            <th>操作（删除操作会清空该用户的所有数据）</th>
          </tr>
        </thead>
        <tbody>
          <% comments.forEach(function (comment) { %>
            <tr>
              <td><%= comment._id %></td>
              <td><%= comment.author.name %></td>
              <td><%= comment.postId %></td>
              <td><%= comment.content %></td>
              <td>
                <a href="/admin/comment/remove?commentId=<%= comment._id %>">
                  <div class="ui small button danger">删除</div>
                </a>
              </td>
            </tr>
          <% }) %>
        </tbody>
        <tfoot class="full-width">
          <tr>
            <th colspan="6"></th>
          </tr>
        </tfoot>
      </table>
  </div>

<%- include('footer') %>
