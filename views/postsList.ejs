<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>blog-admin</title>
    <link rel='stylesheet' href='/stylesheets/semantic.min.css' />
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="/javascripts/jquery-3.2.1.min.js"></script>
    <script src="/javascripts/semantic.min.js"></script>
    <script src="/javascripts/wangEditor.min.js"></script>
    <script src="/javascripts/jurlp.min.js"></script>
  </head>
  <body>
  <div class="nav">
    <div class="ui grid">
      <div class="four wide column"></div>
      <div class="eight wide column">
        <h1>blog后台管理</h1>
        <p>文章列表</p>
      </div>
    </div>
  </div>
  <div class="nav-setting">
    <div class="ui buttons">
      <div class="ui floating dropdown button">
        <i class="icon bars"></i>
        <div class="menu">
          <a href="/admin/userList" class="item">用户管理</a>
          <a href="/admin/postsList" class="item">文章管理</a>
          <a href="/admin/commentsList" class="item">评论管理</a>
        </div>
      </div>
    </div>
  </div>
  <%- include('components/notification') %>

  <div class="ui grid">
    <div class="four wide column"></div>  

      <table class="ui celled table">
        <thead>
          <tr>
            <th>文章id</th>
            <th>文章标题</th>
            <th>文章作者</th>
            <th>文章类型</th>
            <th>发表时间</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>
          <% posts.forEach(function (post) { %>
            <tr>
              <td><%= post._id %></td>
              <td><%= post.title %></td>
              <td><%= post.author.name %></td>
              <td><%= post.type %></td>
              <td><%= post.created_at %></td>
              <td>
                <a href="/posts/<%= post._id %>">
                  <div class="ui small button">详情</div>
                </a>
                <a href="/admin/post/remove?postId=<%= post._id %>">
                  <div class="ui small button danger">删除</div>
                </a>
                <span></span>
              </td>
            </tr>
          <% }) %>
        </tbody>
        <tfoot class="full-width">
            <tr>
              <th colspan="6"></th>
            </tr>
          </tfoot>
      </table>
  </div>

<%- include('footer') %>
